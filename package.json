{
  "name": "easy-greenjs",
  "displayName": "easy-greenjs",
  "description": "an extension for greenjs",
  "version": "0.0.8",
  "publisher": "inu1255",
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript"
  ],
  "main": "./extension",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "easy greenjs",
        "properties": {
          "greenjs.postFunc": {
            "type": "string",
            "description": "post接口测试函数",
            "default": "APP.Srv(\"{U}\",{NB},null,30000,function(ret) {\n\tif(200!=ret.no)\n\t\treturn alert(ret.msg);\n\t$1\n});"
          },
          "greenjs.getFunc": {
            "type": "string",
            "description": "get接口测试函数",
            "default": "APP.Srv(\"{U}\",{NB},null,30000,function(ret) {\n\tif(200!=ret.no)\n\t\treturn alert(ret.msg);\n\t$1\n},true);"
          },
          "greenjs.completionTrigger": {
            "type": "string",
            "description": "测试接口自动补全触发字符串,如:r,则输入r会提示接口补全",
            "default": ""
          },
          "greenjs.apiDir": {
            "type": "string",
            "description": "接口定义文件夹名",
            "default": "@API",
            "minLength": 1
          },
          "greenjs.apiPath": {
            "type": "string",
            "description": "接口定义路径",
            "default": ""
          }
        }
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "**/*API/*.json",
        "url": "./greenjs.json"
      },
      {
        "fileMatch": "**/api/*.json",
        "url": "./greenjs.json"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.5.2",
    "vscode": "^1.1.5",
    "mocha": "^3.5.0",
    "eslint": "^4.6.1",
    "@types/node": "^7.0.0",
    "@types/mocha": "^2.2.42"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inu1255/vscode-easy-greenjs.git"
  },
  "author": "inu1255",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inu1255/vscode-easy-greenjs/issues"
  },
  "homepage": "https://github.com/inu1255/vscode-easy-greenjs#readme"
}
